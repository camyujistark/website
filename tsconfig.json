{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "esModuleInterop": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017"],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
